@using BusinessObject.ViewModel
@model BasicInfoView

@{
    Layout = "/Views/Shared/_Layout2.cshtml";
}
<div class="container">
    <div class="row">
        <h2 class="text-center">Basic info form</h2>
    </div>
    <form method="post" class="py-2"  enctype="multipart/form-data">
        <div class="form-group py-2">
            <label asp-for="@Model.FullName">Full Name</label>
            <input asp-for="@Model.FullName" type="text" class="form-control" id="FullName" name="FullName">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label asp-for="@Model.Email">Email</label>
            <input asp-for="@Model.Email" type="email" class="form-control" id="Email" name="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label >Picture</label>
            <input  type="file" class="form-control" name="image">
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label asp-for="@Model.Address">Address</label>
            <textarea asp-for="@Model.Address" class="form-control" id="Address" name="Address"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label asp-for="@Model.Biography">Biography</label>
            <textarea asp-for="@Model.Biography" class="form-control" id="Biography" name="Biography"></textarea>
            <span asp-validation-for="Biography" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Add</button>
        <a class="btn btn-secondary mx-4" asp-controller="BasicInfo" asp-action="Index">Back</a>
    </form>
</div>