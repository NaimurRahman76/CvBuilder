@model BusinessObject.ViewModel.BasicInfoView

@{
   Layout = "/Views/Shared/_Layout2.cshtml";
}
<div class="row text-center">
    <h2>Updating Basic Information</h2>

</div>
<form method="post" enctype="multipart/form-data">
    <div class="form-group py-2">
        <label asp-for="@Model.FullName">Full Name</label>
        <input asp-for="@Model.FullName" type="text" class="form-control" value="@Model.FullName">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <label asp-for="@Model.Email">Email</label>
        <input asp-for="@Model.Email" type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <label asp-for="@Model.Picture">Picture</label>
        <input  type="file" class="form-control" name="image">
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <label asp-for="@Model.Address">Address</label>
        <textarea asp-for="@Model.Address" class="form-control" id="Address" name="Address" value="@Model.Address"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <label asp-for="@Model.Biography">Biography</label>
        <textarea asp-for="@Model.Biography" class="form-control" id="Biography" name="Biography" value="@Model.Biography"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <input  type="hidden" value="@Model.Id" asp-for="@Model.Id"/>
    <button type="submit" class="btn btn-primary">Update</button>
</form>