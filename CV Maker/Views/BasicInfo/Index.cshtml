@using BusinessObject.ViewModel;
@model BasicInfoView

@{
    Layout = "/Views/Shared/_Layout2.cshtml";
}

@section Scripts {
    <script>
        function confirmDelete(basicInfoId) {
            if (confirm("Are you sure you want to delete this BasicInfo?")) {
                window.location.href = '@Url.Action("Delete", "BasicInfo")?basicInfoId=' + basicInfoId ;
            } 
        }
    </script>
}

<div class="container">
    <h2 class="text-center">Basic Information</h2>
    @if (Model == null)
    {
        <div class="py-2">
            <a class="btn btn-primary float-end mb-4" asp-controller="BasicInfo" asp-action="Add">
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    }
    <div class=" py-1 ">
        @if (Model != null )
        {
            <ul class="list-group">

                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-9">
                                <strong>Name:</strong> @Model.FullName
                                <br>
                                <strong>Address:</strong> @Model.Address
                                <br>
                                <strong>Email:</strong> @Model.Email
                                <br>
                                <strong> Biography :</strong> @Model.Biography
                                <br>
                                <strong>Picture = </strong><img src="@Model.Picture" height="100" width="100">
                            </div>
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-6">
                                        <a class="btn btn-primary" asp-controller="BasicInfo" asp-action="Update" asp-route-basicInfoId="@Model.Id">Update</a>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-danger" onclick="confirmDelete(@Model.Id)">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
            </ul>
        }
        else
        {
            <h5 class="text-center text-danger">No basic information available.</h5>
        }
    </div>


</div>
