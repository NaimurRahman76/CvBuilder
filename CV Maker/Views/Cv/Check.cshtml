<iframe src="@Url.Action("Download", "Cv")" style="width: 100%; height: 600px;"></iframe> 


<div class="template-container">
    <div class="left-side">
        <div class="profileText">
            @if (Model.BasicInfo != null)
            {
                <div class="imgBx">
                    <img src="@Model.BasicInfo.Picture" />
                </div>
                <h4>@Model.BasicInfo.FullName<br /><span>Software engineer Trainee</span> </h4>
            }
            else
            {
                <div class="imgBx">
                    <img src="..." />
                </div>
                <h4>Full Name<br /><span>Software engineer Trainee</span> </h4>
            }
        </div>
        <div class="contact-info">
            <h3 class="title">
                Contact Info
            </h3>
            @if (Model.BasicInfo == null)
            {

                <ul>
                    <li>
                        <span class="icon"><i class="bi bi-envelope-at" aria-hidden="true"></i></span>
                        <span class="text">
                            youremail@gmail.co
                        </span>
                    </li>
                    <li>
                        <span class="icon"><i class="bi bi-linkedin" aria-hidden="true"></i></span>
                        <span class="text">
                            www.linkedin.com
                        </span>
                    </li>
                    <li>
                        <span class="icon"><i class="bi bi-geo-alt-fill"></i></span>
                        <span class="text">Kushtia,Dhaka,Bangladesh</span>
                    </li>
                </ul>
            }
            else
            {
                <ul>
                    <li>
                        <span class="icon"><i class="bi bi-envelope-at" aria-hidden="true"></i></span>
                        <span class="text">
                            @Model.BasicInfo.Email
                        </span>
                    </li>
                    @*<li>
                <span class="icon"><i class="bi bi-linkedin" aria-hidden="true"></i></span>
                <span class="text">
                www.linkedin.com
                </span>
                </li>*@
                    <li>
                        <span class="icon"><i class="bi bi-geo-alt-fill"></i></span>
                        <span class="text">@Model.BasicInfo.Address</span>
                    </li>
                </ul>
            }
        </div>

        <div class="contact-info skill">
            <h3 class="title">
                Skill
            </h3>
            @if (Model.SkillList != null)
            {
                foreach (var skill in Model.SkillList)
                {
                    <div class="row p-1 " style="font-size:.7em;">
                        <div class="col-md-3">
                            <label style="color:white">@skill.Name:</label>
                        </div>
                        <div class="col-md-9">
                            <div class="progress " style="margin-top:1px;">
                                @if (skill.Level == 0)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 1)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:10%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 2)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:20%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 3)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:30%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 4)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:40%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 5)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:50%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 6)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:60%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 7)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:70%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 8)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:80%;" aria-valuenow="8" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 9)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:90%;" aria-valuenow="9" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                                @if (skill.Level == 10)
                                {
                                    <div class="progress-bar" role="progressbar" style="width:100%;" aria-valuenow="10" aria-valuemin="0" aria-valuemax="10">@skill.Level</div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

    </div>

    <div class="right-side">
        <div class="row">
            <div class="biography-title">
                <h2>
                    Biography
                </h2>
                <hr />
            </div>
            <div class="card-body">
                @if (Model.BasicInfo != null)
                {
                    <p>
                        @Model.BasicInfo.Biography
                    </p>
                }
                else
                {
                    <p>
                        This is a sample biography.
                    </p>
                }
            </div>
        </div>
    </div>
