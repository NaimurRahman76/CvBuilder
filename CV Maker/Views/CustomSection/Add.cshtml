@model BusinessObject.ViewModel.CustomSectionView

@{
    Layout = "/Views/Shared/_Layout2.cshtml";
}
<div class="container">
    <h2 class="text-center">Add new Section</h2>
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <div class="row">
        <form method="post">
            <div class="form-group py-2">
                <label asp-for="@Model.SectionName">Section Name</label>
                <input asp-for="@Model.SectionName" type="text" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>