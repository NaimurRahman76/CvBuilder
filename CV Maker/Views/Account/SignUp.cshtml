@using BusinessObject.ViewModel;
@model SignUpView

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" integrity="sha512-..." crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $("#password-toggle").click(function () {
                var passwordField = $("#password");
                var icon = $(this);

                if (passwordField.attr("type") === "password") {
                    passwordField.attr("type", "text");
                    icon.removeClass("fa-eye");
                    icon.addClass("fa-eye-slash");
                } else {
                    passwordField.attr("type", "password");
                    icon.removeClass("fa-eye-slash");
                    icon.addClass("fa-eye");
                }
            });
        });
    </script>
}

<div class="container mt-5">
    <h2 class="text-center">Sign Up</h2>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.Name">UserName:</label>
                    <input asp-for="@Model.Name" stype="text" class="form-control" required>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email:</label>
                    <input asp-for="@Model.Email" type="email" class="form-control" required>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password">Password:</label>
                    <div class="input-group">
                        <input asp-for="@Model.Password" type="password" class="form-control" required>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Sign Up</button>
            </form>
        </div>
    </div>
</div>
